<div class="container">
    <div class="row">
        <div class="mx-auto">
            <h1> Sign-In </h1>
            {{#if message}}
            <div class="alert">{{message}}</div>
            {{/if}}

            <div class="errorMessages"></div>

            <form id="signin" name="signin" method="post" action="/signin">
                <label for="email">Email</label>
                <input name="email" class="email" type="text" placeholder="Email" />
                <br>
                <br>
                <label for="password">Password</label>
                <input name="password" class="password" type="password" placeholder="Password" />
                <br>
                <input class="btn btn-primary btn-lg" id="submit" type="submit" value="Sign In" />
            </form>
            <h2>Sign in with:</h2>
            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
            <br>
            {{!-- TODO Twitter isn't currently working --}}
            {{!-- When you sign into twitter it makes a new user account no matter what --}}
            <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
            <hr>
            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
</div>